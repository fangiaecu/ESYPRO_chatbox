// chatbot_vercel: Web app chatbot cho Vercel

const express = require('express');
const app = express();
const port = process.env.PORT || 3000;

app.get('/', (req, res) => {
    res.send(`
    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Chatbot EsyPro</title>
        <style>
            body {
                text-align: center;
                font-family: Arial, sans-serif;
                margin-top: 20px;
            }
            iframe {
                width: 90%;
                max-width: 500px;
                height: 600px;
                border: none;
            }
        </style>
    </head>
    <body>
        <h1>Chatbot EsyPro</h1>
        <iframe src="https://www.chatbase.co/chatbot/YOUR_CHATBOT_ID"></iframe>

        <script>
            window.chatbaseConfig = {
                chatbotId: "YOUR_CHATBOT_ID",
                width: "400px",
                height: "500px",
                chatType: "popup"
            };
        </script>
        <script src="https://www.chatbase.co/embed.min.js" defer></script>
    </body>
    </html>
    `);
});

app.listen(port, () => {
    console.log(`Chatbot app đang chạy tại http://localhost:${port}`);
});

module.exports = app;
